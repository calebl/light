<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--  overflow menu background-->
        <item name="android:itemBackground">@color/overflow_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Read" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorRead</item>
        <!--<item name="colorPrimaryDark">@color/colorRead</item>-->
    </style>

    <style name="AppTheme.Learn" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorLearn</item>
        <!--<item name="colorPrimaryDark">@color/colorRead</item>-->
    </style>

    <style name="AppTheme.Connect" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorConnect</item>
        <!--<item name="colorPrimaryDark">@color/colorRead</item>-->
    </style>
    <style name="AppTheme.LanguageSelector" parent="AppTheme.NoActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#878787</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

</resources>
