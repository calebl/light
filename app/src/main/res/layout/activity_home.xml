<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".HomeActivity"
    android:background="#aaaaaa"
    android:weightSum="2"
    android:orientation="vertical">

    <Button
        android:text="@string/readWithIcon"
        android:id="@+id/readButton"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f27935"
        android:layout_width="match_parent"
        android:elevation="0dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        style="?android:attr/borderlessButtonStyle"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="#2d91aa"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/learnWithIcon"
            android:id="@+id/learnButton"
            android:layout_weight="0.5"
            android:background="#14b9d6"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:textSize="24sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/connectWithIcon"
            android:id="@+id/askButton"
            android:layout_weight="0.5"
            android:background="#1fbba6"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
