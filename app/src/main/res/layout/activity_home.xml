<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".HomeActivity"
    android:background="#aaaaaa"
    android:weightSum="2"
    android:orientation="vertical">

    <Button
        android:id="@+id/readButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#425b62"
        android:drawableTop="@drawable/icon_book"
        android:elevation="0dp"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/read"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="#2d91aa"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/learnButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#78c5c7"
            android:drawableTop="@drawable/icon_list"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="@string/learn"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/askButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#e6826f"
            android:drawableTop="@drawable/icon_speech"
            android:gravity="center"
            android:paddingBottom="35dp"
            android:paddingTop="50dp"
            android:text="@string/connect"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
